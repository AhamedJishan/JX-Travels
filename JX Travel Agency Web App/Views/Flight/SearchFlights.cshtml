@model FlightQueryModel

@{
	ViewData["Title"] = "Flight Search Result";
}

<div class="container-fluid bg-black bg-opacity-10 full-width pb-4">
	<h1 class="text-white">Search Results</h1>
	<div class="container bg-white bg-opacity-10 py-1" style="width:1024px">
		@for (int i = 0; i < 6; i++)
		{
			<div class="bg-white my-2 rounded-3 row" style="height:125px">
				<div class="col-7 border div-center">
					<div class="bg-warning div-center" style="height:90%;width:95%;">
						<div class="bg-info border div-center" style="height:90%;width:20%">
							<h1>LOGO</h1>
						</div>
						<div class="bg-primary border div-centery" style="height:90%;width:80%">
							<h1>DETAILS</h1>
						</div>
					</div>
					
				</div>
				<div class="col border" style="display:flex; justify-content:center; align-items:center">
					<div class="bg-warning" style="height:90%;width:95%">
						<h1>Price Section</h1>
					</div>
				</div>
			</div>
		}
		<h1>asd</h1>
	</div>
</div>