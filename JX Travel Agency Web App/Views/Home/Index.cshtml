@{
    ViewData["Title"] = "Home Page";
}

<div class="mx-4 px-5">
    <div>
        <br />
        <div class="text-white mt-5">
            <h1 class="fw-normal">Make every flight great</h1>
            <h4 class="fw-lighter">-JX Travel Agency</h4>
        </div>
        <br /><br />
        <div class="p-1 mt-5 bg-white rounded-3">
            <form>
                <div class="d-inline-flex justify-content-around">
                    <div class="px-3" style="width:200px">
                        <label class="form-label d-flex mb-0 mt-2">From</label>
                        <input class="form-control border-0 p-0" placeholder="Enter a City or Airport" />
                        <hr class="mt-0" />
                    </div>
                    <i class="bi-arrow-left-right my-auto"></i>
                    <div class="px-3" style="width:200px">
                        <label class="form-label d-flex mb-0 mt-2">To</label>
                        <input class="form-control border-0 p-0" placeholder="Enter a City or Airport" />
                        <hr class="mt-0" />
                    </div>
                    <div class="px-3" style="width:200px">
                        <label class="form-label d-flex mb-0 mt-2">Departure</label>
                        <input class="form-control border-0 p-0" type="date" placeholder="Enter a City or Airport" />
                        <hr class="mt-0" />
                    </div>
                    <div class="px-3" style="width:200px">
                        <label class="form-label d-flex mb-0 mt-2">Passengers</label>
                        <input class="form-control border-0 p-0" placeholder="Enter a City or Airport" />
                        <hr class="mt-0" />
                    </div>
                    <div class="px-3 my-auto" style="width:200px">
                        <button type="submit" class="btn btn-warning" style="width:200px">Search</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    

</div>


